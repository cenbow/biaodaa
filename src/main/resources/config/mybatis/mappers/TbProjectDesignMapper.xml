  <select id="queryProjectDesignByProId" resultMap="BaseResultMap" parameterType="java.lang.Integer">
    SELECT t.`pkid`
       ,t.`pro_id`
       ,t.`pro_name`
       ,t.`pro_type`
       ,t.`explore_org`
       ,t.`com_id`
       ,t.`design_org`
       ,t.`check_org`
       ,t.`check_finish_date`
    FROM tb_project_design t
    WHERE t.`pro_id` = #{proId}
  </select>

    <select id="queryProjectDesignDetailLimitOneByProId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT
         t.*
        ,t1.`pro_scope`
    FROM tb_project_design t
    LEFT JOIN tb_project t1 ON t.`pro_id` = t1.`pro_id`
    WHERE t.`pro_id` = #{proId}
    limit 1
    </select>

  <select id="queryProjectDesignDetailByProId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    SELECT
         t.`pkid`
        ,t.`check_org`
        ,t.`design_org`
        ,t.`explore_org`
        ,t2.`org_code` AS checkOrgCode
        ,t3.`org_code` AS designOrgCode
        ,t4.`org_code` AS exploreOrgCode
        ,t3.`regis_address` AS regisAddressDesign
	    ,t4.`regis_address` AS regisAddressExplore
    FROM tb_project_design t
    LEFT JOIN tb_company t2 ON t.`check_org` = t2.`com_name`
    LEFT JOIN tb_company t3 ON t.`design_org` = t3.`com_name`
    LEFT JOIN tb_company t4 ON t.`explore_org` = t4.`com_name`
    WHERE t.`pro_id` = #{proId}
  </select>

    <select id="queryProvinceByName" parameterType="java.lang.String" resultType="java.lang.String">
        SELECT
          t.`display_name`
        FROM
          mishu.`area` t
        WHERE t.`path` = SUBSTRING_INDEX(
            (SELECT
              t1.`path`
            FROM
              mishu.`area` t1
            WHERE t1.`name` = #{name}),
            ',',
            1
          )

    </select>
